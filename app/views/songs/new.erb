<h1 class="text-center">Add a Song</h1>
 <hr/>
 
 <% if @song.errors.any? %>
  <div>
    <strong>Some issues with your song, please fix them:</strong>
    <ul>
      <% @song.errors.full_songs.each do |song| %>
        <li><%= song %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<div class="container-fluid">
 <form method="post" action="/songs">
   <div class="form-group">
     <label for="exampleInputAuthor1">Author:</label>
     <input type="text" class="form-control" id="exampleInputAuthor1" name="author" value="<%= @song.author %>" placeholder="Author">
   </div>
   <div class="form-group">
     <label for="exampleInputTitle1">Title:</label>
     <input type="text" class="form-control" id="exampleInputTitle1" name="title" value="<%= @song.title %>" placeholder="Title">
   </div>
   <div class="form-group">
     <label for="exampleInputURL1">URL(optional):</label>
     <input type="text" class="form-control" id="exampleInputURL1" name="url" value="<%= @song.url %>" placeholder="URL">
   </div>
   <div>
     <button type="submit" class="btn btn-primary">Submit</button>
   </div>
 </form>

  <hr/>
 <a class="btn btn-danger" href="/songs">Back to All Songs</a>
 </div>